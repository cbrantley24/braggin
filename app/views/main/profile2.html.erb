<section class="profile">
	<div class="row form">
		<h3 style="display:inline-block">Welcome User, care to tell us about yourself?</h3><button class="button grey right">Not Right Now</button>
		<hr>
		<h3>Basic Profile</h3>
		<div class="large-12 columns fieldBox">
			<div class="field">
				<label>Profile Photo</label>
				<img src="https://www.geocaching.com/images/default_avatar.png" width="64px"> <br />
				<input type="file">
			</div>
		</div>
		<div class="large-12 columns fieldBox">
			<div class="field">
				<label>About You</label>
				<textarea rows="4" placeholder="Talk ambitions, goals, hobbies, skateboarding background, anything you want..."></textarea>
			</div>
		</div>
		<div class="large-6 columns fieldBox">
			<div class="field">
				<label>Date of Birth</label>
				<div class="row">
					<div class="large-4 columns">
						<select>
							<option selected disabled>MM</option>
						</select>
					</div>
					<div class="large-4 columns">
						<select>
							<option selected disabled>DD</option>
						</select>
					</div>
					<div class="large-4 columns">
						<select>
							<option selected disabled>YYYY</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="large-6 columns fieldBox">
			<div class="row">
				<div class="large-6 columns">
					<div class="field">
						<label>Gender</label>
						<select>
							<option selected disabled>--Select One--</option>
							<option>Male</option>
							<option>Female</option>
						</select>
					</div>
				</div>
				<div class="large-6 columns">
					<div class="field">
						<label>Location</label>
						<input type="text" placeholder="Los Angeles, CA">
					</div>
				</div>
			</div>
		</div>
		<h3>Skateboarding General</h3>
		<div class="large-6 columns fieldBox">
			<div class="row">
				<div class="large-6 columns">
					<div class="field">
						<label>Skate Stance</label>
